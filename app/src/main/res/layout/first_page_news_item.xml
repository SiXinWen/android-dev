<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    android:background="#ffffff">
    <ImageView
        android:id="@+id/first_page_news_item_pic"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="100dp"
        android:src="@drawable/win10tx"
        android:layout_margin="10dp"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_margin="5dp"
        android:layout_height="100dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5">
            <TextView
                android:textColor="#000000"
                android:id="@+id/first_page_news_item_intro"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="微软腾讯战略合作 电脑管家可一键升级Win10"/>
            </RelativeLayout>
        <TextView
            android:textColor="#000000"
            android:gravity="top"
            android:id="@+id/first_page_news_item_description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:text="详细介绍"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000000"/>
            <TextView
                android:background="#C0C0C0"
                android:textColor="#000000"
                android:id="@+id/first_page_news_item_agree"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/first_page_news_item_disagree"
                android:layout_marginLeft="10dp"
                android:textColor="#ffffff"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:background="#ffffffff"/>
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000000"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:gravity="center_vertical">
        <Button
            android:id="@+id/first_page_news_item_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:text=">"
            android:textSize="22sp"/>
        </LinearLayout>
</LinearLayout>
